<%- model_class = Timeline -%>
<div class="page-header">
  <h1><%=t '.title', :default => Timeline %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @timeline.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @timeline.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:default_color) %></dt>
      <dd><pre class="prettyprint"><%= @timeline.default_color %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:access_level) %></dt>
      <dd><pre class="prettyprint"><%= @timeline.access_level %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              timelines_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_timeline_path(@timeline), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              timeline_path(@timeline),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

