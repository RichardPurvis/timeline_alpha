<%- model_class = Sequence -%>
<div class="page-header">
  <h1><%=t '.title', :default => Sequence %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @sequence.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @sequence.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:start_datetime) %></dt>
      <dd><pre class="prettyprint"><%= @sequence.start_datetime %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:end_datetime) %></dt>
      <dd><pre class="prettyprint"><%= @sequence.end_datetime %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:priority) %></dt>
      <dd><pre class="prettyprint"><%= @sequence.priority %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              sequences_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sequence_path(@sequence), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sequence_path(@sequence),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

