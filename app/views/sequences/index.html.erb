<%- model_class = Sequence -%>
<div class="page-header">
  <h1><%=t '.title', :default => Sequence %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:start_datetime) %></th>
      <th><%= model_class.human_attribute_name(:end_datetime) %></th>
      <th><%= model_class.human_attribute_name(:priority) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sequences.each do |sequence| %>
      <tr>
        <td><%= sequence.id %></td>
        <td><%= sequence.name %></td>
        <td><%= sequence.description %></td>
        <td><%= sequence.start_datetime %></td>
        <td><%= sequence.end_datetime %></td>
        <td><%= sequence.priority %></td>
        <td><%=l sequence.created_at, format: :long %></td>
        <td>
          <%= link_to sequence_path(sequence), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to sequence_path(sequence), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sequence_path,
            :class => 'btn btn-primary' %>
