<h1>Listing sequences</h1>

<table>
  <thead>
    <tr>
      <th>Timeline</th>
      <th>Name</th>
      <th>Description</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sequences.each do |sequence| %>
      <tr>
        <td><%= sequence.timeline %></td>
        <td><%= sequence.name %></td>
        <td><%= sequence.description %></td>
        <td><%= sequence.start_datetime %></td>
        <td><%= sequence.end_datetime %></td>
        <td><%= sequence.priority %></td>
        <td><%= link_to 'Show', sequence %></td>
        <td><%= link_to 'Edit', edit_sequence_path(sequence) %></td>
        <td><%= link_to 'Destroy', sequence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

